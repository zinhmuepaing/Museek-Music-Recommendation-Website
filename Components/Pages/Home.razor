@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Museek | Home</title>
    <link rel="stylesheet" href="home.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <header class="navbar">
        <div class="logo">
            <img src="MuseekLogo.png" alt="Museek Logo" class="logo-img" />
            <h1>Museek</h1>
        </div>
        <nav class="nav-links">
            <a href="#" class="active"><img src="homeIcon.png" class="icon" /> Home</a>
            <a href="#"><img src="album.png" class="icon" /> Library</a>
            <a href="#"><img src="search.png" class="icon" /> Discover</a>
        </nav>
        <div class="user-profile">
            <img src="userIcon.png" alt="User" class="profile-icon" />
        </div>
    </header>

    <!-- Search Bar -->
    <section class="search-section">
        <div class="search-bar">
            <img src="search.png" alt="Search" class="search-icon" />
            <input type="text" id="searchInput" placeholder="Search songs, artists, or albums..." />
        </div>
    </section>

    <!-- Page Grid -->
    <div class="page-grid">
        <!-- Left Side (Content) -->
        <main class="left-content">
            <section class="music-section">
                <h2>Popular Songs</h2>
                <div class="music-grid" id="popularSongs"></div>
            </section>

            <section class="music-section">
                <h2>Trending Artists</h2>
                <div class="artist-grid" id="trendingArtists"></div>
            </section>

            <section class="music-section">
                <h2>New Releases</h2>
                <div class="music-grid" id="newReleases"></div>
            </section>
        </main>

        <!-- Right Side (Video and Player) -->
        <aside class="right-content">
            <!-- Random Video Section -->
            <section class="video-box">
                <div class="video-frame">
                    <video autoplay muted loop playsinline>
                        <source src="sunflower.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </section>


            <!-- Music Player Section -->
            <section class="player-box">
                <div class="player-left">
                    <img id="songCover" src="(album cover path here).png" alt="Cover" />
                    <div class="song-info">
                        <h4 id="songTitle">Rhythmic Echoes</h4>
                        <p id="songArtist">Alex Harmon</p>
                    </div>
                    <img src="heartBefore.png" alt="like" class="icon-btn" />
                </div>

                <div class="player-controls">
                    <input type="range" id="progressBar" min="0" max="100" value="0" />
                    <div class="control-buttons">
                        <img src="shuffleButton.png" alt="Shuffle" class="control-icon" />
                        <img src="prevButton.png" alt="Previous" class="control-icon" />
                        <img src="playButton.png" id="playPause" alt="Play" class="control-icon main" />
                        <img src="nextButton.png" alt="Next" class="control-icon" />
                        <img src="repeatButton.png" alt="Repeat" class="control-icon" />
                    </div>
                    <div class="time-display">
                        <span id="currentTime">00:00</span>
                        <span id="remainingTime">-00:00</span>
                    </div>
                </div>

                <div class="volume-control">
                    <img src="volume.png" alt="Volume" class="control-icon" />
                    <input type="range" id="volumeBar" min="0" max="1" step="0.01" value="0.7" />
                </div>

                <!-- Hidden audio element -->
                <audio id="audio" preload="metadata">
                    <source src="(song file path here).mp3" type="audio/mpeg" />
                </audio>
            </section>
        </aside>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 Museek Pte Ltd. All rights reserved.</p>
        <div class="footer-links">
            <a href="#">FAQ</a>
            <a href="#">Contact</a>
            <a href="#">Terms & Conditions</a>
        </div>
    </footer>

    <script>

            // Sample data
        const popularSongs = [
          { title: "Midnight Echo", artist: "Luna Grey", image: "(song image path 1).png" },
          { title: "Electric Sky", artist: "Nova Beats", image: "(song image path 2).png" },
          { title: "Gravity", artist: "Atlas Sound", image: "(song image path 3).png" }
        ];

        const trendingArtists = [
          { name: "Aria Stone", image: "(artist image 1).png" },
          { name: "Eon Wave", image: "(artist image 2).png" },
          { name: "Sora", image: "(artist image 3).png" }
        ];

        const newReleases = [
          { title: "Dusk Till Dawn", artist: "Aether", image: "(new release 1).png" },
          { title: "Wildfire", artist: "Vexx", image: "(new release 2).png" },
          { title: "Lost Frequencies", artist: "EchoLine", image: "(new release 3).png" }
        ];

        // Functions to render cards
        function createMusicCard(song) {
          return `
            <div class="music-card">
              <img src="${song.image}" alt="${song.title}">
              <h4>${song.title}</h4>
              <p>${song.artist}</p>
            </div>`;
        }

        function createArtistCard(artist) {
          return `
            <div class="artist-card">
              <img src="${artist.image}" alt="${artist.name}">
              <h4>${artist.name}</h4>
            </div>`;
        }

        // Inject data
        document.getElementById("popularSongs").innerHTML = popularSongs.map(createMusicCard).join("");
        document.getElementById("trendingArtists").innerHTML = trendingArtists.map(createArtistCard).join("");
        document.getElementById("newReleases").innerHTML = newReleases.map(createMusicCard).join("");

        // Basic player logic
        const audio = document.getElementById("audio");
        const playPause = document.getElementById("playPause");
        const progressBar = document.getElementById("progressBar");
        const currentTimeEl = document.getElementById("currentTime");
        const remainingTimeEl = document.getElementById("remainingTime");
        const volumeBar = document.getElementById("volumeBar");

        playPause.addEventListener("click", () => {
          if (audio.paused) {
            audio.play();
            playPause.src = "pauseButton.png";
          } else {
            audio.pause();
            playPause.src = "playButton.png";
          }
        });

        // Like button toggle
        const likeBtn = document.querySelector(".icon-btn");

        likeBtn.addEventListener("click", () => {
          if (likeBtn.src.includes("heartBefore.png")) {
            likeBtn.src = "heartAfter.png"; // liked state
          } else {
            likeBtn.src = "heartBefore.png"; // unliked state
          }
        });


        audio.addEventListener("timeupdate", () => {
          const progress = (audio.currentTime / audio.duration) * 100;
          progressBar.value = progress || 0;
          currentTimeEl.textContent = formatTime(audio.currentTime);
          remainingTimeEl.textContent = "-" + formatTime(audio.duration - audio.currentTime);
        });

        progressBar.addEventListener("input", () => {
          audio.currentTime = (progressBar.value / 100) * audio.duration;
        });

        volumeBar.addEventListener("input", () => {
          audio.volume = volumeBar.value;
        });

        function formatTime(seconds) {
          if (isNaN(seconds)) return "00:00";
          const m = Math.floor(seconds / 60);
          const s = Math.floor(seconds % 60);
          return `${m < 10 ? "0" + m : m}:${s < 10 ? "0" + s : s}`;
        }

        // Search bar
        document.getElementById("searchInput").addEventListener("keyup", (e) => {
          if (e.key === "Enter") {
            alert(`Searching for: ${e.target.value}`);
          }
        });

    </script>
</body>
</html>

